close all; clear; clc;

%% Problem 1
a = 2;
xdotFunc = @(x)([-x(2) + a*x(1)*(x(1)^2 + x(2)^2); x(1) + a*x(2)*(x(1)^2 + x(2)^2)]);

% Create the meshgrid
x_vals = linspace(-10, 10, 100);
[X1, X2] = meshgrid(x_vals, x_vals);

% Calculate the phase portrait
xdot = zeros(length(numel(X1)), 2);
for j = 1:numel(X1)
    % Calculate the rate of change
    xdot(j, :) = xdotFunc([X1(j), X2(j)])';
end

